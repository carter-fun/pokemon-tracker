// Pokemon Card Tracker Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Points and economy
  points        Int       @default(0)
  totalEarned   Int       @default(0)
  
  // Login tracking
  lastLogin     DateTime  @default(now())
  loginStreak   Int       @default(0)
  
  // Equipped items
  equippedFrame      String?
  equippedTitle      String?
  equippedBackground String?
  equippedCompanion  String?
  
  // Starter choice
  starterPokemon String?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  cards         UserCard[]
  achievements  UserAchievement[]
  avatarItems   UserAvatarItem[]
  eggs          UserEgg[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserCard {
  id         String   @id @default(cuid())
  userId     String
  cardId     String   // Pokemon TCG API card ID
  quantity   Int      @default(1)
  isWishlist Boolean  @default(false)
  addedAt    DateTime @default(now())
  
  // Cache card data for quick display
  cardName   String
  cardImage  String
  cardSet    String
  cardRarity String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, cardId])
}

model AvatarItem {
  id          String @id @default(cuid())
  name        String
  description String
  type        String // frame, title, background, companion, hat, accessory
  price       Int
  imageUrl    String
  rarity      String @default("common") // common, uncommon, rare, legendary, secret
  unlockType  String @default("purchase") // purchase, achievement, egg, secret
  
  owners UserAvatarItem[]
}

model UserAvatarItem {
  id       String  @id @default(cuid())
  userId   String
  itemId   String
  equipped Boolean @default(false)
  
  user User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  item AvatarItem @relation(fields: [itemId], references: [id])
  
  @@unique([userId, itemId])
}

model Achievement {
  id          String @id @default(cuid())
  name        String @unique
  description String
  icon        String
  pointReward Int
  condition   String // JSON string describing unlock condition
  category    String // collection, streak, special, secret
  
  unlockedBy UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id])
  
  @@unique([userId, achievementId])
}

model UserEgg {
  id          String   @id @default(cuid())
  userId      String
  eggType     String   // common, rare, legendary
  hatchTime   DateTime
  isHatched   Boolean  @default(false)
  rewardItem  String?  // Avatar item ID when hatched
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
